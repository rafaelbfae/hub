@model CrmHub.Identity.Models.AccountViewModels.RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>Criar uma nova conta</h3>
                <small></small>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="All" class="help-block small"></div>
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" maxlength="256" class="form-control" />
                                <span asp-validation-for="UserName" class="help-block small"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="help-block small"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="help-block small"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="help-block small"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="ConfirmEmail"></label>
                                <input asp-for="ConfirmEmail" class="form-control" />
                                <span asp-validation-for="ConfirmEmail" class="help-block small"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-default">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <strong>CrmHub</strong> - Integrador de CRM's <br /> 2016 Copyright Floripa Software
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
